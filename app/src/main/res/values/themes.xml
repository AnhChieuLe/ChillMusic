<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChillMusic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="q">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <style name="ThemeFlashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/flash_screen</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="q">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>
</resources>