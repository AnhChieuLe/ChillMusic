<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MusicPlayerActivity"
    android:background="@color/background">

    <FrameLayout
        android:id="@+id/frame_transition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:transitionName="frame_transition"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:alpha="0.75">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"
                android:layout_marginStart="10dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_album"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center">
            </TextView>

            <ImageView
                android:id="@+id/img_more"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_more_vert"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                tools:ignore="ContentDescription" />
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:transitionName="main"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="card_album_artist"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="30dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="40dp">
            <ImageView
                android:id="@+id/img_album_art"
                android:transitionName="album_artist"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:src="@drawable/avatar2"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ln_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="info"
            android:orientation="vertical"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="title"
                android:text="Million Years Ago"
                android:textSize="24sp"
                android:maxLines="1"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionName="artist"
                android:text="Adele"
                android:textSize="16sp"
                android:maxLines="1"
                android:textStyle="bold"
                android:textAlignment="center"/>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/seekbar_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:11"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <SeekBar
                android:id="@+id/seekbar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:thumb="@drawable/seekbar_thumb"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/seekbar_current"
                android:layout_toStartOf="@id/seekbar_max"/>

            <TextView
                android:id="@+id/seekbar_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:22"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:weightSum="4">
            <ImageView
                android:id="@+id/img_playlist"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:src="@drawable/ic_queue_music"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:id="@+id/img_playlist_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:src="@drawable/ic_playlist_add"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:id="@+id/img_favorite"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:src="@drawable/ic_favorite_empty"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:id="@+id/img_share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:src="@drawable/ic_share"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:weightSum="5">
            <ImageView
                android:id="@+id/img_navigation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@drawable/ic_shuffle"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:id="@+id/img_previous"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:src="@drawable/ic_previous"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:id="@+id/img_play_or_pause"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:src="@drawable/ic_pause"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:id="@+id/img_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:src="@drawable/ic_next"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@drawable/ic_clear"
                tools:ignore="ContentDescription"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>