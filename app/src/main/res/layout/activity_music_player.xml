<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MusicPlayerActivity"
    android:background="@color/red_back">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"
                android:alpha="0.6"
                android:layout_marginStart="5dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/album_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center">
            </TextView>
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/linear_controller"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="300dp">
        <ImageView
            android:id="@+id/img_album_art"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:src="@drawable/avatar2"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Million Years Ago"
                android:textSize="22sp"
                android:maxLines="3"
                android:textStyle="bold"
                app:tint="@color/text"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adele"
                android:textStyle="bold"
                android:alpha="0.75"
                app:tint="@color/text"
                android:textAlignment="center"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/seekbar_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:11"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <SeekBar
                android:id="@+id/seekbar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/red"
                android:max="100"
                android:progress="35"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/seekbar_current"
                android:layout_toStartOf="@id/seekbar_max"/>

            <TextView
                android:id="@+id/seekbar_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:22"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="25dp"
            android:weightSum="4"
            android:alpha="0.25">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:src="@drawable/ic_queue_music"
                app:tint="@color/text"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:src="@drawable/ic_playlist_add"
                app:tint="@color/text"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:src="@drawable/ic_favorite"
                app:tint="@color/text"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:src="@drawable/ic_share"
                app:tint="@color/text"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:weightSum="5">
            <ImageView
                android:id="@+id/img_navigation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@drawable/ic_shuffle_05"
                app:tint="@color/text"
                android:alpha="1"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:id="@+id/img_previous"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:src="@drawable/ic_previous"
                app:tint="@color/text"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:id="@+id/img_play_or_pause"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:src="@drawable/ic_pause"
                app:tint="@color/text"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:id="@+id/img_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:src="@drawable/ic_next"
                app:tint="@color/text"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:src="@drawable/ic_clear"
                app:tint="@color/text"
                tools:ignore="ContentDescription"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>