<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_song"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ln_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_toStartOf="@id/ln_icon"
        android:layout_centerVertical="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_album_art"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/music_thumb1"
            android:scaleType="centerCrop"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/primary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Million Years Ago"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adele"
                android:textStyle="bold"
                android:textSize="12sp"
                android:alpha="0.75"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp">
        <ImageView
            android:id="@+id/img_favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_favorite_empty"
            android:alpha="0.8"
            android:visibility="gone"
            android:layout_marginEnd="15dp"/>

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_more_vert"
            android:alpha="0.5" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ln_song"
        android:alpha="0.2"
        android:background="@color/primary"/>
</RelativeLayout>